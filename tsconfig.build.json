{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "outDir": "./lib",            
      "declaration": true,          
      "declarationMap": true,
      "sourceMap": true,
      "emitDeclarationOnly": false, 
      "module": "ESNext",
      "target": "ES6",
      "jsx": "react",
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "lib", "**/*.test.ts", "**/*.test.tsx"]
  }
  